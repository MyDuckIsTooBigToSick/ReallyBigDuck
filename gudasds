def tinh_tong_n_so_nguyen(n):
  """Tính tổng các số nguyên từ 1 đến n.

  Args:
    n: Số nguyên dương.

  Returns:
    Tổng các số nguyên từ 1 đến n.
  """

  if n <= 0:
    return "n phải là số nguyên dương."

  tong = 0
  for i in range(1, n + 1):
    tong += i

  return tong
n = int(input("Nhập số nguyên dương n: "))
ket_qua = tinh_tong_n_so_nguyen(n)
print(f"Tổng các số nguyên từ 1 đến {n} là: {ket_qua}")
